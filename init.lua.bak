-- Bootstrap lazy.nvim
-- Carregar configurações básicas
require("options")
require("keymaps")
require("autocmds")

-- Instalar e configurar gerenciador de plugins
local lazypath = vim.fn.stdpath("data") .. "/lazy/lazy.nvim"
if not vim.loop.fs_stat(lazypath) then
  vim.fn.system({
    "git",
    "clone",
    "--filter=blob:none",
    "https://github.com/folke/lazy.nvim.git",
    "--branch=stable", -- latest stable release
    lazypath,
  })
end
vim.opt.rtp:prepend(lazypath)

-- IMPORTANTE: Para evitar o erro "Re-sourcing your config is not supported with lazy.nvim",
-- é recomendado não recarregar este arquivo diretamente após fazer alterações.
-- Em vez disso, saia do Neovim e inicie-o novamente.
-- Ou use o comando :Lazy sync para atualizar os plugins.

-- Carregar plugins
require("lazy").setup("plugins", {
  checker = {
    enabled = true,
    notify = false,
    frequency = 3600, -- verificar a cada hora
  },
  change_detection = {
    notify = false,
  },
  ui = {
    border = "rounded",
  },
})lazypath = vim.fn.stdpath("data") .. "/lazy/lazy.nvim"
if not (vim.uv or vim.loop).fs_stat(lazypath) then
  vim.fn.system({
    "git", "clone", "--filter=blob:none",
    "https://github.com/folke/lazy.nvim.git", "--branch=stable",
    lazypath,
  })
end
vim.opt.rtp:prepend(lazypath)

-- Configurações básicas
vim.g.mapleader = ' '
vim.g.maplocalleader = ' '

-- Carregar configurações core de forma segura
local function load_module(module)
  local status_ok, loaded_module = pcall(require, module)
  if not status_ok then
    vim.notify("Erro ao carregar " .. module, vim.log.levels.WARN)
  end
  return status_ok, loaded_module
end

-- Carregar configurações
load_module("core.options")
load_module("core.keymaps")
load_module("core.autocmds")

-- Carregar plugins
require("lazy").setup("plugins", {
  change_detection = { notify = false },
  install = { colorscheme = { "rose-pine" } },
  ui = { border = "rounded" },
  performance = {
    rtp = {
      disabled_plugins = {
        "netrwPlugin", "tohtml", 
      }
    }
  }
})

